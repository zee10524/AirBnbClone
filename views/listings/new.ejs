<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Create a New Listing</h3>
        
        <form method="Post" action="/listings" novalidate class="needs-validation">

            <div class="mb-3">
                <label for="title" class="form-lable">Title</label>
                <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>

                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Please enter in valid format</div>

            </div>    

            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="valid-feedback">Description looks good</div>
                <div class="invalid-feedback">Please enter a valid description</div>
            </div>

           <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <!-- âœ… Fixed only this line -->
                <input name="listing[image][url]" placeholder="Enter image URL" type="text" class="form-control" required />
                <div class="valid-feedback">Image link looks good</div>
                <div class="invalid-feedback">Please enter a valid image URL</div>
          </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required/>
                    <div class="valid-feedback">Price looks good</div>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>

                <div class="mb-3 col-md-8">
                    <lable for="country" class="form-label">Country</lable>
                    <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required/>
                    <div class="valid-feedback">Country looks good</div>
                    <div class="invalid-feedback">Please enter a valid country</div>
                </div>
            </div>
           

            <div class="mb-3">
                <lable for="location" class="form-label">Location</lable>
                <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required/>      
                <div class="valid-feedback">Location looks good</div>
                <div class="invalid-feedback">Please enter a valid location</div>
            </div>
            
            <button class="btn btn-dark add-btn">Add</button>
            <br>
            <br>
        </form>
    </div>
</div>

</body>

